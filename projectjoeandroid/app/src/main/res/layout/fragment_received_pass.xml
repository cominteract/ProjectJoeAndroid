<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#3996ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
        android:layout_alignParentTop="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/receivedPassCaption"
        android:layout_centerHorizontal="true"
        android:textColor="#fff"
        android:maxLines="2"
        android:lines="2"
        android:layout_margin="3dp"
        android:text="WOOHOO You have received the pass!"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#274954"
        android:padding="3dp"
        android:layout_below="@id/receivedPassCaption"
        android:id="@+id/receivedPassContainer"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:padding="1dp"
                android:id="@+id/receivedPassImage"

                android:textColor="#ffffff">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:textSize="12sp"
                android:id="@+id/receivedPassTitleTxt"
                android:text="GUESS"
                android:textColor="#ffffff">
            </TextView>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10% off on men's watches"

            android:id="@+id/receivedPassDescTxt"
            android:padding="1dp"
            android:textSize="12sp"
            android:textColor="#ffffff">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:weightSum="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:text="98 claims"
                android:id="@+id/receivedPassClaimsTxt"
                android:padding="1dp"
                android:textSize="12sp"
                android:textColor="#ffffff">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:text="2 Days Left"
                android:id="@+id/receivedPassDeadlineTxt"
                android:padding="1dp"
                android:textSize="12sp"
                android:textColor="#ffffff">
            </TextView>
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#005b7e"
        android:layout_above="@id/receivedPassCaptionContainer"/>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/receivedPassCaptionContainer"
        android:layout_above="@id/receivedPassEdt"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="From :"
            android:id="@+id/receivedPassFromTxt"
            android:padding="1dp"
            android:textSize="12sp"
            android:textColor="#ffffff">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight=".4"
            android:text="Message :"
            android:padding="1dp"
            android:textSize="12sp"
            android:textColor="#ffffff">
        </TextView>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:hint="Enter message here"
        android:layout_height="65dp"
        android:id="@+id/receivedPassEdt"
        android:padding="5dp"
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:background="#6babbe"
        android:layout_above="@+id/receivedPassBtn"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textColor="#fff"
        android:id="@+id/receivedPassBtn"
        android:layout_alignParentBottom="true"
        android:background="#000" />
</RelativeLayout>
