<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1dbed0"
    tools:context="com.andre.projjoe.activities.MerchantLogin">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/jollibee_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:text="Chat Report"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Welcome to chat support!"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="12sp"
            android:text="Send us a message and our representatives will answer your questions If we're not online you can leave us an inquiry ticket"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:layout_width="240dp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="#2981b9"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="TRANSACTION SUCCESSFUL"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:textColor="#fff"
                android:id="@+id/merchantReportRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="120dp" />

            <TextView
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"

                android:text="Type your inquiry and we'll respond with 24 hours"
                android:padding="3dp"
                android:layout_margin="3dp"
                android:layout_marginTop="20dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>





    </LinearLayout>
    <RelativeLayout
        android:background="#2981b9"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button

            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:layout_centerVertical="true"
            android:background="@drawable/addreport"
            android:textColor="#fff"
            android:id="@+id/merchantReportAddBtn"
            android:layout_width="32dp"
            android:layout_height="34dp" />
        <EditText
            android:layout_toRightOf="@id/merchantReportAddBtn"
            android:layout_centerVertical="true"
            android:id="@+id/merchantReportEdt"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:hint="Report"
            android:background="@drawable/rounded_white_edittext"
            android:layout_width="240dp"

            android:layout_height="wrap_content" />
        <Button

            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="1dp"
            android:background="@drawable/rounded_orange_btn"
            android:text="SEND"
            android:textColor="#fff" />
    </RelativeLayout>

</RelativeLayout>
