<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1dbed0"
    tools:context="com.andre.projjoe.activities.MerchantLogin">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center_horizontal"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:background="@drawable/jollibee_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/merchantDailyTimeRecordTransactionTypeTxt"
            android:layout_gravity="center_horizontal"
            android:text="Hi Joe Jonas"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:layout_marginTop="30dp"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Please take a picture to confirm your time"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:textColor="#fff"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentBottom="true"
            android:text="Proceed to camera"
            android:padding="3dp"

            android:background="#2981b9"
            android:textColor="#fff"
            android:id="@+id/merchantReviewPointsOkBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="9:15 A.M"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:textColor="#fff"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="SM North Edsa"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:textColor="#fff"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
