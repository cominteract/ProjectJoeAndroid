<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#3996ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

	<TextView
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:id="@+id/givePointsCurrentPointsTxt"
		android:layout_width="80dp"
		android:maxLines="2"
		android:textSize="18sp"
		android:layout_marginTop="10dp"
		android:textColor="#fff"
		android:text="Points: 1000"
		android:layout_height="wrap_content" />
	<Spinner
		android:layout_below="@id/givePointsCurrentPointsTxt"
		android:id="@+id/givePointsSpinner"
		android:layout_width="match_parent"

		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true"
		 />
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:textColor="#fff"
		android:layout_centerHorizontal="true"
		android:id="@+id/givePointsTitleTxt"
		android:layout_above="@id/givePointsEdt"
	    android:text="Input an amount of points you want to give." />
	
	
	<EditText
	    android:layout_width="match_parent"
	    android:hint="ex. 1000"
	    android:id="@+id/givePointsEdt"
	    android:inputType="number"
	    android:layout_height="wrap_content"
	    android:padding="5dp"
	    android:layout_margin="10dp"
		android:layout_above="@id/givePointsMessageEdt"
	    android:background="#6babbe"
	    />
	<EditText
	    android:layout_width="match_parent"
	    android:hint="Enter message here"
	    android:layout_height="130dp"
	    android:id="@+id/givePointsMessageEdt"
	    android:padding="5dp"
	    android:textColor="#fff"
	    android:layout_margin="20dp"
		android:layout_above="@id/givePointsOKBtn"

	    android:background="#6babbe"
	    />
	<Button
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="OK"

	    android:textColor="#fff"
	    android:id="@+id/givePointsOKBtn"
		android:layout_alignParentBottom="true"
	    android:background="#000" />
</RelativeLayout>
