            android:layout_centerHorizontal="true"
            android:padding="3dp"
            android:weightSum="1"
            android:layout_below="@id/filterPhotoImage"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
        	android:orientation="horizontal">
        	<Button 
        	  	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:id="@+id/filterPhotoChangeBrightnessBtn"
        	    android:background="@drawable/brightness_icon"
        	    />
        	<Button 
        	  	android:layout_width="wrap_content"

        	  	android:id="@+id/filterPhotoChangeContrastBtn"
            	android:layout_height="wrap_content"
        	    android:background="@drawable/sun_icon"
        	    />
        	<Button 
        	  	android:layout_width="wrap_content"

        	  	android:id="@+id/filterPhotoChangeSettingsBtn"
            	android:layout_height="wrap_content"
        	    android:background="@drawable/setting_pic_icon"
        	    />
        
            
        </LinearLayout> 
        
