<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:weightSum="1"
    android:background="#f4c6ca"
    android:orientation="horizontal" >
    <LinearLayout
    	android:layout_width="0dp"
        android:layout_weight=".6"
        android:orientation="vertical" 
    	android:layout_height="wrap_content" >
    	<TextView 
        android:text="PPCI-EMBARCADERO"
		android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:id="@+id/merchBranchName"
        android:layout_height="wrap_content"
        />
        <TextView 
        android:text="Brgy Victory Village Legazpi Albay"
		android:layout_width="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#000000"
		android:textSize="12sp"
        android:id="@+id/merchBranchAddress"
        android:layout_height="wrap_content"
        />
       
   </LinearLayout>
   		<ImageView
   			android:layout_width="0dp"
        	android:layout_weight=".08"
        	android:layout_margin="10dp"
        	android:layout_height="wrap_content"
        	android:background="@drawable/branch_pin"
        	/>
        <TextView 
			android:text="Show in map"
			android:layout_width="0dp"
			android:layout_weight=".40"
			android:layout_margin="10dp"
			android:textColor="#ffffff"
			android:layout_height="wrap_content"
        />


</LinearLayout>
