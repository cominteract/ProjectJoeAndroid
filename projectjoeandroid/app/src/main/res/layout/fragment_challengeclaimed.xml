<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#595c98"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="fill_parent" >


    <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Congratulations"
        android:textSize="24sp"
        android:layout_margin="20dp"
        android:textColor="#FFF" 
         />
 
    <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Your mystery reward is"
        android:textSize="18sp"
        android:textColor="#FFF" 
         />

   <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="10 % off on selected chocolate Chocolate Madness"
        android:id="@+id/challengeClaimedPassDescriptionTxt"
        android:textSize="15sp"
        android:textColor="#FFF" 
         />
          <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Transaction Code : "
        android:id="@+id/challengeClaimedTransactionCodeTxt"
        android:textSize="13sp"
        android:textColor="#FFF" 
         />
    <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Timestamp : "
        android:id="@+id/challengeClaimedTimeStampTxt"
        android:textSize="13sp"
        android:layout_margin="10dp"
        android:textColor="#FFF" 
         />
    <Button
        android:id="@+id/challengeClaimedOkBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="OK"
        android:background="#4f5081"/>

       
</LinearLayout>