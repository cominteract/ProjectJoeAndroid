<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="#297586"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="5dp"
        android:id="@+id/friendsImage"
        android:background="#f00"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <!-- android:layout_toRightOf="@id/friendsImage"
        android:layout_toEndOf="@id/friendsImage"-->
    <TextView
        android:textColor="#fff"
        android:text="Dummy name"

        android:layout_margin="5dp"
        android:layout_toRightOf="@id/friendsImage"
        android:layout_toEndOf="@id/friendsImage"

        android:id="@+id/friendsNameTxt"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="#fff"
        android:layout_margin="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/friendsGiveBtn"
        android:text="GIVE"
        android:background="#005b7e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>