<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3996ad"
    android:orientation="vertical" >
    
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
	    android:textColor="#fff"
	    android:layout_margin="20dp"
	    android:textSize="20sp"
		android:id="@+id/successGivePointsCaptionTxt"
	    android:text="Total Points" />
	<TextView
		android:layout_below="@id/successGivePointsCaptionTxt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:textColor="#fff"
	    android:layout_margin="20dp"
	    android:textSize="30sp"
		android:layout_centerHorizontal="true"
	    android:id="@+id/successGivePointsCurrentTxt"
	    android:text="1220 pts" />
	<TextView
		android:layout_below="@id/successGivePointsCurrentTxt"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:textColor="#fff"
	    android:layout_margin="20dp"
	    android:textSize="20sp"
		android:layout_centerHorizontal="true"
		android:id="@+id/successGivePointsCaptionGivenTxt"
	    android:text="You have successfully given 20 points to Eldrin" />
   	<Button
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="OK"
	    android:textColor="#fff"
		android:layout_alignParentBottom="true"
	    android:id="@+id/successGivePointsOkBtn"
	    android:background="#000" />	    	
</RelativeLayout>
