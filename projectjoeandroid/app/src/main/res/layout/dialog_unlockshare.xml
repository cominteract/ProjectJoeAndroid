<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#5253aa"
    android:padding="10dp"
    android:layout_gravity="center_horizontal"
    android:layout_width="220dp"
    android:layout_height="200dp">
    <TextView
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:id="@+id/unlockShareTxt"
        android:text="To unlock this pass : Share this pass to your friends! "
        android:textColor="#fff"
        android:textSize="22sp"
        android:layout_margin="10dp"
        android:layout_width="180dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/unlock_fb"
            android:id="@+id/unlockShareFacebookBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"  />
        <ImageView
            android:layout_margin="5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/unlock_sh"
            android:id="@+id/unlockShareEmailBtn"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>
</LinearLayout>